<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:id="@+id/card_view"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPemain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/egy_maulana_vikri"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/txtPemain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EGY MAULANA VIKRI"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtBiodataPemain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aku disini dan kau disana hanya berjumpa via suara namun ku slalu menunggu saat kita akan berjumapa
meski kau kini jauh disana kita memandangan yang sama jauh di mata namun di hati"
            android:textStyle="bold"
            android:paddingTop="15dp"/>

        <Button
            android:id="@+id/btnDetailPemain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:text="DETAIL"
            android:textSize="20dp"
            android:backgroundTint="@color/cardview_dark_background"/>



    </LinearLayout>

</android.support.v7.widget.CardView>