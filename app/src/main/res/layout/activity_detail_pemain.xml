<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailPemainActivity"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDetailPemain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/egy_maulana_vikri"/>

            <TextView
                android:id="@+id/txtNamaPemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EGY MAULANA VIKRI"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtDetailPemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ku banyak lakukan kesalahan tak mematuhi kewajiban dan mengabaijkan laranganmu
ya allah ku bertobat padamu pada mu tuhan ku ampunilah aku dari segala dosa kesalahan hamba yang jauh dari mu"
                android:textStyle="bold"
                android:paddingTop="8dp"/>
        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>